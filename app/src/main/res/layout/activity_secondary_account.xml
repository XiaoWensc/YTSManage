<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_white"
    android:layout_height="match_parent">

    <include layout="@layout/top" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/modify_name_container"
                layout="@layout/layout_secondary_modifyname"
                android:visibility="gone" />

            <include
                android:id="@+id/modify_pwd_container"
                layout="@layout/layout_secondary_modifypwd"
                android:visibility="gone" />

            <include
                android:id="@+id/modify_phone_container"
                layout="@layout/layout_secondary_modify_phone"
                android:visibility="gone" />


            <include
                android:id="@+id/modify_transmit_container"
                layout="@layout/layout_secondary_modifytransmit"
                android:visibility="gone" />

            <include
                android:id="@+id/modify_verifycode_container"
                layout="@layout/layout_verify_code"
                android:visibility="gone" />

            <include
                android:id="@+id/modify_check_password_container"
                layout="@layout/modify_check_pwd"
                android:visibility="gone" />

            <supermarket.cn.yt.asuper.ytlibrary.widgets.ProgressButton
                android:id="@+id/modify_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/bg_sld_prmr_ccl_cn"
                android:textColor="@color/white"
                app:pb_progress_text_color="@color/white"
                app:pb_progress_text_size="5"
                app:pb_progress_height="40dp"
                app:pb_progress_text="提交"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>