<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/client_list_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slctr_brdr_btm"
                android:button="@null"
                android:drawableTop="@drawable/slct_ic_nointention"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="暂无意向"
                android:textColor="@color/subsidy_double_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_list_first_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/bg_sld_rd_brdr_wht_ccl_cn"
                android:textSize="12sp"
                android:focusable="false"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="20"/>
        </FrameLayout>

        <View style="@style/commonDivider_horizontal" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/client_list_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slctr_brdr_btm"
                android:button="@null"
                android:drawableTop="@drawable/slct_ic_giveup"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="放弃加盟"
                android:textColor="@color/subsidy_double_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/client_list_second_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/bg_sld_rd_brdr_wht_ccl_cn"
                android:textSize="12sp"
                android:focusable="false"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="20"/>
        </FrameLayout>
    </LinearLayout>

    <View style="@style/commonDivider_vertical" />

    <android.support.v4.view.ViewPager
        android:id="@+id/client_recycle_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>