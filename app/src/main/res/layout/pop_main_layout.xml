<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_sld_prmr_ccl_cn"
        app:srcCompat="@drawable/ic_main_add"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <supermarket.cn.yt.asuper.ytlibrary.widgets.TrigonView
        android:id="@+id/trigon"
        android:layout_width="27dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imageButton"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trigon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_sld_wht_rd_cn"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="新增客户移至这里啦" />
        
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:background="#666666"/>
        <TextView
            android:id="@+id/btn_gons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="知道了" />
    </LinearLayout>

</RelativeLayout>