<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/item_client_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:button="@null"
        android:text="意向加盟"
        android:clickable="false"
        android:focusable="false"
        android:textSize="14sp"
        android:textColor="@color/subsidy_double_color"/>
    <TextView
        android:id="@+id/item_client_filter_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="12sp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_sld_rd_ccl_cn"/>
    <CheckBox
        android:id="@+id/item_client_filter_check"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:button="@null"
        android:layout_weight="1"
        android:gravity="right"
        android:drawableRight="@drawable/ic_sl_checkbox"/>
</LinearLayout>