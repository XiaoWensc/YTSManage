<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F4F4F4"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="50dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_oper_top">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_oper_top" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/index_top_hread"
                android:textColor="#FFFEFE"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="扫描二维码为商家签到"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="-5dp"
            android:background="@color/white">


            <ImageView
                android:id="@+id/wave1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_oper_btn2"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/wave2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_oper_btn2"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/wave3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_oper_btn2"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/btn_sm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_oper_btn"/>



        </FrameLayout>
    </LinearLayout>

</LinearLayout>