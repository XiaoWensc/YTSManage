<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top" />

    <android.support.v4.view.ViewPager
        android:id="@+id/preview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"/>
    <android.support.v7.widget.CardView
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:cardElevation="10dp"
        app:behavior_peekHeight="50dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="营业执照名称:"
                    />
                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="深圳市普通科技有限公司"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="注册号/信号代码:"
                    />
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="11111111111111111111"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="营业场所:"
                    />
                <TextView
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="深圳市宝安区福永街高新区凤塘大道星光科技园B栋一至四层111111111111111111"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="注册时间:"
                    />
                <TextView
                    android:id="@+id/name4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="2015年3月14日"
                    />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnOpenTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="点击查看营业执照详细信息"/>

            <ImageView
                android:id="@+id/btnOpenImg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_preview_top"/>
        </FrameLayout>
    </FrameLayout>

    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>